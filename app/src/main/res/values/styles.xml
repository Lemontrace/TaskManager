<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorMenu">@color/colorMenu</item>
        <item name="colorBackground">@color/colorMenu</item>

        <item name="colorButtonNormal">@color/colorMenu</item>

        <item name="toolbarStyle">@style/AppBarTheme</item>
        <item name="homeAsUpIndicator">@drawable/back_arrow_white</item>

    </style>


    <style name="AppBarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorMenu</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.White">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorMenu</item>
    </style>

</resources>
